<resources>

    <!-- Themes -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light
        </item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/dntRed</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dntRed</item>
        <item name="android:textColorPrimary">@color/text_main</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashdrawable</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Styles -->

    <style name="ProjectLargeTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="ProjectMediumTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="ProjectSmallTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="ProfilePlaceTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StatsCircleCounter" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StatsCircleLabel" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="UserName" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ParticipantText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FabInfoText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
